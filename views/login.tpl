<div class="content">
     <div class="row">
       <div class="col-lg-4 col-sm-5">
      </div>
      <div class="col-lg-4 col-sm-5" style="padding-top:50px;">
        <div class="card bg-light mb-3">
          <div class="card-header">
            <h4 class="title">Authenticate</h4>
          </div>
          <form method="post" action="auth" id="login_form">
            <div class="card-body">
              <div class="row">
                <div class="col-md-6">
                  <div class="form-group">
                    <label for="username">Username</label>
                    <input class="form-control border-input" name="username" type="text">
                </div>
                </div>
                <div class="col-md-6">
                  <div class="form-group">
                    <label for="password">Password</label>
                    <input class="form-control border-input" name="password" type="password">
                  </div>
                </div>
              </div>
              <div class="text-center">
                <button type="submit" class="btn btn-fill btn-wd">Login</button>
              </div>
            </div>
          </form>
        </div>
      </div>
    </div>
  </div>
</div>
